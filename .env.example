# This is a template file for environment variables
# Copy this file to .env.local and fill in your actual values
# NEVER commit actual credentials to version control

# Authentication (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key
CLERK_SECRET_KEY=sk_test_your_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/signup

# Database (Supabase/PostgreSQL)
# Use strong passwords in production
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"
DIRECT_URL="postgresql://username:password@host:port/database?sslmode=require"

# Stripe Payment
# Use test keys for development
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_KEY=your_service_key

# Application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Security Notes:
# 1. Use strong, unique passwords for all credentials
# 2. Keep production credentials separate and secure
# 3. Enable SSL/TLS in production
# 4. Regularly rotate keys and secrets
# 5. Use test credentials for development
